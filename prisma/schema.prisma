generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum PostType {
  STUDY
  HOBBY
  PROJECT
  DELIVERY
  ROOMMATE
}
enum UserStatus {
  ACTIVE
  INACTIVE
}
enum PostStatus {
  OPEN
  CLOSED
}
model User {
  id            String @id @default(uuid())

  email           String  @unique
  password        String

  name            String
  studentId       Int

  major           String 
  refreshToken    String?

  age             Int?
  gender          String?
  
  posts           Post[]   @relation("UserPosts")
  joinedPosts     Post[]   @relation("PostParticipants")

  status          UserStatus @default(ACTIVE)
}
model Post {
  id            String @id @default(uuid())

  title           String
  content         String 

  type              PostType 
  roommateDetails   RoommateDetails? @relation("RoommateDetails")

  tags            String[]

  author          User @relation("UserPosts", fields: [authorId], references: [id])
  authorId        String

  participants    User[]  @relation("PostParticipants")
  maxParticipants Int

  createdAt       DateTime  @default(now())
  deadline        DateTime

  status          PostStatus  @default(OPEN)
}

model RoommateDetails {
  id            String @id @default(uuid())

  grade         Int
  room          String
  semester      String

  refrigerator  Boolean
  wifi          Boolean 
  snoring       Boolean
  smoking       Boolean
  sleepTime     String
  wakeUpTime    String
  mbti          String

  rmRefrigerator  Boolean
  rmWifi          Boolean
  rmSnoring       Boolean
  rmSmoking       Boolean
  rmMbti          String
  
  post        Post     @relation("RoommateDetails", fields: [postId], references: [id])
  postId      String   @unique
}